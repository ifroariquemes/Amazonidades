{% extends 'base.html.twig' %}

{% block title %}Amazonidades | Administração{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/signin.css') }}">
{% endblock %}

{% block body %}

    <form class="form-signin" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Amazonidades</h1>
        <label for="inputUsername" class="sr-only">Usuário</label>
        <input type="text" id="inputUsername" class="form-control" placeholder="Usuário" required autofocus value="{{ last_username }}" name="username">
        <label for="inputPassword" class="sr-only">Senha</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Senha" required name="password">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
    </form>
{% endblock %}
